# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym l resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym h  resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"


# Arrow keys
bindsym --release $mod+Mod1+j exec sh ~/scripts/arrow/down
bindsym --release $mod+Mod1+k exec sh ~/scripts/arrow/up
#bindsym --release $mod+Mod1+k exec --no-startup-id xdotool key --clearmodifiers up
bindsym --release $mod+Mod1+l exec sh ~/scripts/arrow/right
bindsym --release $mod+Mod1+h exec sh ~/scripts/arrow/left

# Function keys
mode "change_function" {
        bindsym 1 exec ~/scripts/function/change_f 1
        bindsym 2 exec ~/scripts/function/change_f 2
        bindsym 3 exec ~/scripts/function/change_f 3
        bindsym 4 exec ~/scripts/function/change_f 4
        bindsym 5 exec ~/scripts/function/change_f 5
        bindsym 6 exec ~/scripts/function/change_f 6
        bindsym 7 exec ~/scripts/function/change_f 7

        bindsym Escape mode "default"
}

mode "function" {
        bindsym 1 mode "change_function"
        bindsym 2 exec ~/scripts/function/F2
        bindsym 3 exec ~/scripts/function/F3
        bindsym 4 exec ~/scripts/function/F4
        bindsym 5 exec ~/scripts/function/F5
        bindsym 6 exec ~/scripts/function/F6
        bindsym 7 exec ~/scripts/function/F7
        bindsym 8 exec ~/scripts/function/F8
        
        bindsym f mode "change_function"
        bindsym Escape mode "default"
}

bindsym $mod+Shift+f mode "function"

